<%- include('partials/head') %>

<body>
  <%- include('partials/nav') %>

  <main class="flex-shrink-0">
    <div class="container entry-form">
      <h2>Create a Launch</h2>
      <div class="row justify-content-center align-items-center" style="height: 80vh">
        <div class="col-12 col-md-10">
          <form class="entry-form-container" action="/create-launch" method="POST">
            <div class="row">
              <div class="col">
                <div class="form-group">
                  <label for="title">Title: </label>
                  <input class="form-control" name="title" id="title" required />
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <label for="date">Launch Date: </label>
                  <input class="form-control" type="date" name="date" id="date" min="2021/01/01" required />
                </div>
              </div>
              <div class="mb-3 form-group">
                <label for="info" class="form-label">Launch Info:</label>
                <textarea class="form-control" id="info" name="info" rows="3"></textarea>
              </div>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-sm-3 justify-content-start">
                  <label for="quantity">Quantity: </label>
                  <input class="form-control" type="number" name="quantity" id="quantity" />
                </div>
                <div class="col-sm-3 justify-content-start">
                  <label for="price">Launch Price: </label>
                  <input class="form-control" type="number" name="price" id="price" />
                </div>
              </div>
            </div>

            <br /><br />
            <button type="submit" class="btn btn-secondary btn-block">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </main>
  <%- include('partials/footer') %>
</body>
